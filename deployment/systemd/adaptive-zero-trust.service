[Unit]
Description=Adaptive Zero Trust Flask API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/adaptive-zero-trust
EnvironmentFile=/opt/adaptive-zero-trust/.env
ExecStart=/opt/adaptive-zero-trust/venv/bin/gunicorn -c gunicorn.conf.py app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
