[Unit]
Description=Backup Adaptive Zero Trust SQLite DB
After=adaptive-zero-trust.service

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/opt/adaptive-zero-trust
EnvironmentFile=/opt/adaptive-zero-trust/.env
ExecStart=/opt/adaptive-zero-trust/venv/bin/python scripts/backup_db.py --db-path ${DB_PATH} --backup-dir backups
